<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreen">

    <ImageView
        android:id="@+id/idivImagenSup2"
        android:layout_width="413dp"
        android:layout_height="263dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_smart_eat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idtvIniciarSesion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/montserrat"
        android:text="INICIAR SESIÓN"
        android:textAllCaps="false"
        android:textColor="#D0433C"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/idivImagenSup2"
        app:layout_constraintTop_toBottomOf="@+id/idivImagenSup2" />

    <EditText
        android:id="@+id/idetUsuarioCorreo"
        android:layout_width="333dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/boton_iniciar_sesion"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Usuario, correo eléctronico o teléfono"
        android:textColorHint="#F1EFEF"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#F1EFEF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idtvIniciarSesion2" />

    <EditText
        android:id="@+id/idetContraseña"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/boton_contrasena"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Contraseña"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#F1EFEF"
        android:textColorHint="#F1EFEF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/idetUsuarioCorreo"
        app:layout_constraintStart_toStartOf="@+id/idetUsuarioCorreo"
        app:layout_constraintTop_toBottomOf="@+id/idetUsuarioCorreo" />

    <TextView
        android:id="@+id/idtvTienesCuenta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat"
        android:text="¿Olvidó la contraseña?"
        android:textColor="#D07514"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/idetContraseña"
        app:layout_constraintTop_toBottomOf="@+id/idetContraseña" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#BA4A4A"
        android:fontFamily="@font/montserrat"
        android:text="INICIAR"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/idetContraseña"
        app:layout_constraintStart_toStartOf="@+id/idtvTienesCuenta2"
        app:layout_constraintTop_toBottomOf="@+id/idtvTienesCuenta2" />
</androidx.constraintlayout.widget.ConstraintLayout>